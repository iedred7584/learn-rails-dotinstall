<h2>Add new post</h2>

<%= form_with model: @post, url: posts_path, class: "newForm" do |f| %>
<p>
  <%= f.text_field :title, placeholder: "enter title", class: "newForm_title" %>
  <% if @post.errors.messages[:title].any? # エラーメッセージが存在するかどうか %>
  <span class="error"><%= @post.errors.messages[:title][0] %></span>
  <% end %>
</p>
<p>
  <%= f.text_area :body, placeholder: "enter body text", class: "newForm_body" %>
  <% if @post.errors.messages[:body].any? # エラーメッセージが存在するかどうか %>
  <span class="error"><%= @post.errors.messages[:body][0] %></span>
  <% end %>
</p>
<p>
  <%= f.submit "Create", class: "newForm_submit" %>
</p>
<% end %>
