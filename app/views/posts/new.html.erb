<h2>Add new post</h2>

<%= form_with model: @post, url: posts_path, class: "newForm" do |f| %>
<p><%= f.text_field :title, placeholder: "enter title", class: "newForm_title" %></p>
<p><%= f.text_area :body, placeholder: "enter body text", class: "newForm_body" %></p>
<p><%= f.submit "Create", class: "newForm_submit" %></p>
<% end %>
