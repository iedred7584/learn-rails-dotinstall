<h2><%= @post.title %></h2>
<p><%= simple_format @post.body %></p>

<h3>Comments</h3>
<%= form_with model: [@post, @comment], class: "form" do |f| %>
<p>
  <%= f.text_field :body, placeholder: "enter comment", class: "form_comment" %>
</p>
<p>
  <%= f.submit class: "form_submit" %>
</p>
<% end %>

<%= link_to "戻る", posts_path %>
